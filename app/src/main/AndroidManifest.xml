<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sam.boston">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MallsActivity"
            android:label="@string/category_malls"
            android:parentActivityName=".MainActivity">

            <!-- for android < 4.0 -->
        </activity>

        <activity android:name=".OfficesActivity"
            android:label="@string/category_offices"
            android:parentActivityName=".MainActivity" >

            <!-- for android < 4.0 -->
        </activity>

        <activity android:name=".CollegesActivity"
            android:label="@string/category_colleges"
            android:parentActivityName=".MainActivity">

            <!-- for android < 4.0 -->
        </activity>

        <activity android:name=".RestaurantsActivity"
            android:label="@string/category_restaurants"
            android:parentActivityName=".MainActivity">

            <!-- for android < 4.0 -->
        </activity>

    </application>

</manifest>